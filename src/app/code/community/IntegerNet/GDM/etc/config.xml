<?xml version="1.0"?>
<config>
    <modules>
        <IntegerNet_GDM>
            <version>0.1.0</version>
        </IntegerNet_GDM>
    </modules>
    <global>
        <models>
            <gdm>
                <class>IntegerNet_GDM_Model</class>
            </gdm>
        </models>
        <blocks>
            <gdm>
                <class>IntegerNet_GDM_Block</class>
            </gdm>
        </blocks>
        <helpers>
            <gdm>
                <class>IntegerNet_GDM_Helper</class>
            </gdm>
        </helpers>
        <resources>
            <gdm_setup>
                <setup>
                    <module>IntegerNet_GDM</module>
                </setup>
            </gdm_setup>
        </resources>
        <events>
            <controller_action_predispatch_install_wizard_index>
                <observers>
                    <gdm>
                        <type>singleton</type>
                        <class>gdm/observer</class>
                        <method>predispatchInstallWizard</method>
                    </gdm>
                </observers>
            </controller_action_predispatch_install_wizard_index>
            <controller_action_predispatch_install_index_index>
                <observers>
                    <gdm>
                        <type>singleton</type>
                        <class>gdm/observer</class>
                        <method>predispatchInstallWizard</method>
                    </gdm>
                </observers>
            </controller_action_predispatch_install_index_index>
        </events>
    </global>

    <default>
        <general>
            <locale>
                <code>de_DE</code>
                <timezone>Europe/Berlin</timezone>
                <currency>EUR</currency>
            </locale>
        </general>
    </default>
</config>