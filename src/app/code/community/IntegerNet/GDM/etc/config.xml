<?xml version="1.0"?>
<config>
    <modules>
        <IntegerNet_GDM>
            <version>0.1.0</version>
        </IntegerNet_GDM>
    </modules>
    <global>
        <models>
            <gdm>
                <class>IntegerNet_GDM_Model</class>
            </gdm>
        </models>
        <blocks>
            <gdm>
                <class>IntegerNet_GDM_Block</class>
            </gdm>
        </blocks>
        <helpers>
            <gdm>
                <class>IntegerNet_GDM_Helper</class>
            </gdm>
        </helpers>
        <resources>
            <gdm_setup>
                <setup>
                    <module>IntegerNet_GDM</module>
                    <class>gdm/setup</class>
                </setup>
            </gdm_setup>
        </resources>
        <events>
            <controller_action_predispatch_install_wizard_index>
                <observers>
                    <gdm>
                        <type>singleton</type>
                        <class>gdm/observer</class>
                        <method>predispatchInstallStart</method>
                    </gdm>
                </observers>
            </controller_action_predispatch_install_wizard_index>
            <controller_action_predispatch_install_index_index>
                <observers>
                    <gdm>
                        <type>singleton</type>
                        <class>gdm/observer</class>
                        <method>predispatchInstallStart</method>
                    </gdm>
                </observers>
            </controller_action_predispatch_install_index_index>
            <controller_action_predispatch_install_wizard_config>
                <observers>
                    <gdm>
                        <type>singleton</type>
                        <class>gdm/observer</class>
                        <method>predispatchInstallWizard</method>
                    </gdm>
                </observers>
            </controller_action_predispatch_install_wizard_config>
            <controller_action_predispatch_install_wizard_administrator>
                <observers>
                    <gdm>
                        <type>singleton</type>
                        <class>gdm/observer</class>
                        <method>predispatchInstallWizard</method>
                    </gdm>
                </observers>
            </controller_action_predispatch_install_wizard_administrator>
            <controller_action_predispatch_install_wizard_end>
                <observers>
                    <gdm>
                        <type>singleton</type>
                        <class>gdm/observer</class>
                        <method>predispatchInstallWizard</method>
                    </gdm>
                </observers>
            </controller_action_predispatch_install_wizard_end>
        </events>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <gdm>
                    <files>
                        <default>IntegerNet_GDM.csv</default>
                    </files>
                </gdm>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <IntegerNet_GDM after="Mage_Adminhtml">IntegerNet_GDM</IntegerNet_GDM>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <default>
        <general>
            <country>
                <allow>DE</allow>
            </country>
            <locale>
                <code>de_DE</code>
            </locale>
            <store_information>
                <merchant_country>DE</merchant_country>
            </store_information>
        </general>
        <design>
            <header>
                <welcome>Herzlich Willkommen!</welcome>
            </header>
        </design>
        <catalog>
            <custom_options>
                <time_format>24h</time_format>
                <date_fields_order>d,m,y</date_fields_order>
            </custom_options>
        </catalog>
        <persistent>
            <options>
                <enabled>1</enabled>
            </options>
        </persistent>
        <sales_pdf>
            <invoice>
                <engine>firegento_pdf/invoice</engine>
            </invoice>
            <firegento_pdf>
                <show_footer>1</show_footer>
            </firegento_pdf>
        </sales_pdf>
        <shipping>
            <option>
                <checkout_multiple>0</checkout_multiple>
            </option>
        </shipping>
        <autoshipping>
            <settings>
                <enabled>1</enabled>
                <country_id>DE</country_id>
            </settings>
        </autoshipping>
        <admin>
            <security>
                <session_cookie_lifetime>36000</session_cookie_lifetime>
            </security>
            <startup>
                <page>system/gdm</page>
            </startup>
        </admin>
        <dev>
            <log>
                <active>1</active>
            </log>
            <js>
                <merge_files>0</merge_files>
            </js>
            <css>
                <merge_css_files>0</merge_css_files>
            </css>
        </dev>
    </default>
</config>